<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_house">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.secure.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.secure.ui.gallery.GalleryFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.secure.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map"
        />

    <fragment
        android:id="@+id/navigation_house"
        android:name="com.example.secure.ui.map.MapFragment"
        android:label="@string/title_house"
        tools:layout="@layout/fragment_house" />



    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.secure.ui.slideshow.SlideshowFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_slideshow" />
</navigation>